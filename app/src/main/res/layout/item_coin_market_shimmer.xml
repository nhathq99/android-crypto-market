<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackgroundBorderless">
    <View
        android:id="@+id/view_crypto_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_weight="1"
        android:src="@drawable/ic_arrow_up_24"
        android:background="@color/white_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lnl_market_cap_shimmer"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnl_market_cap_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/view_crypto_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_price"
        app:layout_constraintHorizontal_weight="3"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp">
        <View
            android:id="@+id/tv_coin_name_shimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/white_10" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"/>
        <View
            android:id="@+id/tv_market_cap_shimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/white_10" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/_12sdp"
        android:background="@color/white_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lnl_change"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/lnl_market_cap_shimmer"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="center"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnl_change"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/tv_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        android:orientation="horizontal"
        android:gravity="center|end">
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/img_price_change"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/white_10"/>
        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_price_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/white_10"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>